  <div class="col-4">
    <div class="input-group col-12 ">
      <select name="category" class="custom-select" style=" border-color:black"
        onchange="document.getElementById('searchForm').submit()">
        <option value="" disabled selected>{{#if cate}}{{cate}}{{else}}ALL{{/if}}</option>
        {{#each categoryList}}
        <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>
  </div>


